<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Var det for izy eller hvad?? \nSå put den på max din kakerlak!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:id="@+id/TitelDificulty"
        android:textSize="24sp"
        android:textColor="@android:color/background_light" />

    <SeekBar
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:max="100"
        android:progress="10"
        android:id="@+id/seekBarDifficulty"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/TitelDificulty"
        android:layout_alignParentStart="true"
        android:progressBackgroundTint="@android:color/darker_gray"
        android:progressTint="@android:color/background_light"
        android:scrollbarSize="20dp" />

    <TextView
        android:text="fede"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/textViewDifficulty"
        android:textSize="18sp"
        android:layout_below="@+id/seekBarDifficulty"
        android:layout_alignStart="@+id/TitelDificulty"
        android:textColor="@android:color/background_light" />

    <Button
        android:text="Oralé"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonOKchanges"
        android:layout_below="@+id/textViewDifficulty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <Button
        android:text="Ring til shorta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button112"
        android:layout_below="@+id/buttonOKchanges"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Tryk her og vid mere om dig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSvans"
        android:layout_below="@+id/button112"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/background_light"
        android:foregroundTint="@android:color/background_light"
        android:scrollbarTrackHorizontal="@android:color/background_light"
        android:thumbTint="@android:color/background_light"
        android:tickMarkTint="@android:color/background_light"
        android:tickMark="@android:color/background_light"
        android:thumb="@color/colorPrimary" />

</RelativeLayout>